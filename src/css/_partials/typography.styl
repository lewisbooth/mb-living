@font-face
  font-family "Montserrat Regular"
  src url(/fonts/Montserrat-Regular.woff2) format("woff2"),
      url(/fonts/Montserrat-Regular.woff) format("woff")

@font-face
  font-family "Colonna MT"
  src url(/fonts/ColonnaMT.woff2) format("woff2"),
      url(/fonts/ColonnaMT.woff) format("woff")

*
  font-family mbGeorgia

h1, h2, h3, h4, h5, h6
  font-weight 300
  margin 0 0 1em 0

h1
  font-size 5.6rem
  line-height 1.2em
  margin 0
  font-family mbGeorgia

h2
  font-size 3.2rem
  line-height 1em
  font-family colonna
  text-transform uppercase
  margin 0 1rem
  display inline-block
  text-align center

.gold
  color mbGold !important

.h2-flourishes 
  display flex
  align-items center
  justify-content center
  margin-bottom 2em

  .flourish:last-child
    transform scaleX(-1)

h3
  font-size 3.6rem
  line-height 1.5em

h4
  font-size 2.8rem

h5
  font-size 1.8rem

h6
  font-family montserrat
  font-size 1.4rem
  text-transform uppercase

a
  color linkColor

  &:hover
    text-decoration underline
    color linkColorAccent

p
  margin 0 0 1.6em 0
  line-height 1.6em

ul
  margin 0
  line-height 1.6em

.no-break
  white-space nowrap
  font-family inherit

@media(min-width: breakpointSmall)

  .mobile-break
    display none

@media(max-width: breakpointSmall)

  h1
    font-size 4.2rem

  h2
    font-size 3.2rem