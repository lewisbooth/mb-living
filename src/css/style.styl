@import '_partials/variables'
@import '_partials/reset'
@import '_partials/grid'
@import '_partials/typography'
@import '_partials/buttons'
@import '_partials/nav'

body
  background url("/images/concrete-seamless.jpg")

section
  padding 6rem 0
  box-sizing content-box

  &.introduction 
    p
      margin-top 1.9rem
    h3
      margin 0

.dark-pattern
  background-color richBlack
  background-image url('/images/dark-pattern.png')
  color white

.gold-border
  border-top 2px solid mbGold
  border-bottom 2px solid mbGold

.flourish
  background-image url('/images/flourish.svg')
  background-size contain
  background-repeat no-repeat
  font-size 1rem
  width 5.6em
  height 1.9em

.swiper
  display flex
  flex-direction column
  align-items center
  position relative
  min-height 300px
  max-height 800px
  overflow hidden

  &-container
    height 50vw
    width 100%

  &-slide
    background-size cover
    background-position center center

  &-overlay
    position absolute
    bottom 0
    background-color rgba(255,255,255,0.85)
    z-index 9
    width 100%
    text-align center
    padding 4rem 0

    .h2-flourishes
      margin 0 auto

  &-button-next    
    opacity .75
    background-image url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M27%2C22L27%2C22L5%2C44l-2.1-2.1L22.8%2C22L2.9%2C2.1L5%2C0L27%2C22L27%2C22z'%20fill%3D'%23CCBB81'%2F%3E%3C%2Fsvg%3E") !important
  &-button-prev    
    opacity .75
    background-image url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M0%2C22L22%2C0l2.1%2C2.1L4.2%2C22l19.9%2C19.9L22%2C44L0%2C22L0%2C22L0%2C22z'%20fill%3D'%23CCBB81'%2F%3E%3C%2Fsvg%3E") !important

.property-card
  width 100%
  padding .5rem
  box-sizing border-box
  background-color richBlack
  background-image url('/images/dark-pattern.png')
  color white
  margin-bottom 2rem
  box-sizing border-box

  .swiper
    min-height auto
    max-height auto

    &-container
      height auto 

  &-info
    padding 1.5rem  

    &-logo
      width 120px

    h4
      margin 1.5rem 0 .5rem 0
    
    h6
      margin 0 0 1.75rem 0
    
.gallery
  &-image img
    width 33.333%
    float left

.about-us-background
  background url('/images/logo/logo-icon-faded.svg') no-repeat center
  background-size auto 90%

.testimonial
  margin-bottom 4rem

.contact
  
  &-us
    .contain
      margin-right 4rem
      padding-top 3rem
      padding-bottom 3rem

      h3
        margin 0

  &-info
    text-align center
    margin-bottom 3rem

    &-icon
      width 5rem
      margin 0 auto 3rem auto
      height 5rem
      display flex
      align-items center
      justify-content center

      &-phone
        width 6rem

      &-map
        width 3.5rem

.amp-footer
  padding 1rem 0
  width 100%
  background-color black
  color white
  font-size 1.4rem

  p, a
    font-family montserrat

  a
    font-weight bold

@media(max-width: breakpointSmall)

  section
    padding 4rem 0

  .swiper
    overflow auto
    max-height auto 

  .swiper-overlay
    background-color none
    position relative
    padding 3rem 0 2rem 0

    .h2-flourishes
      margin-bottom 1rem
      
      h2
        font-size 2.4rem

  .about-us-background
    background none 
    
  .gallery
    &-image img
      width 100%

  .contact-us h3
    font-size 3.2rem