extends _partials/layout

block title
  title High Quality Modern Homes in Staffordshire & Cheshire | MB Living
  meta(name="description" content="MB Living are outstanding UK property developers with an established reputation throughout Staffordshire and Cheshire for their construction of high quality family homes.")

block content
  section.contact-us
    .container
      .h2-flourishes.container
        .flourish
        h2 Contact Us
        .flourish
    .split-container.dark-pattern.gold-border
      .split.vertical-center-content
        .contain
          h3 To learn more about our homes or to book a viewing, please #[em.gold call] or #[em.gold email] us.
      .split
        img(src="/images/gallery/1500/twin-detached-rear.jpg")
  .container
    .split-container.contact-info
      .split-3
        .contact-info-icon
          img.contact-info-icon-phone(src="/images/icons/phone.svg")
        h4 Call
        p 07812 132443
      .split-3
        .contact-info-icon
          img.contact-info-icon-email(src="/images/icons/envelope.svg")
        h4 Email
        p info@mbliving.co.uk
      .split-3
        .contact-info-icon
          img.contact-info-icon-map(src="/images/icons/map-pin.svg")
        h4 Find Us
        p MB Living Ltd #[br]Barlaston #[br]Staffordshire