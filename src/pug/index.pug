        .flourish
        h2 Current Developments
        .flourish
      .split-container
        .split
          .property-card
            .swiper.orchard-manor-swiper
              .swiper-container
                .swiper-wrapper
                  .swiper-slide
                    img(src="/images/properties/ashbourne-road/ashbourne-road-semi-detached.jpg" alt="Ashbourne Road Semi Detached")
                  .swiper-slide
                    img(src="/images/properties/ashbourne-road/ashbourne-road-semi-detached-floor-plan.png" alt="Ashbourne Road Semi Detached Floor Plan")
                  .swiper-slide
                    img(src="/images/properties/ashbourne-road/ashbourne-road-semi-detached-sign.jpg" alt="Ashbourne Road Semi Detached Sign")
                .swiper-pagination
                .swiper-button-next
                .swiper-button-prev
            .property-card-info
              .space-between
                img.property-card-info-logo(src='/images/logo/logo-main.svg' alt='MB Living logo')
                p.property-card-info-price from £265,000
              h4 Ashbourne Road
              h6 Leek
              a.button.button-gold.no-margin.full-width(href="#")
                img.button-icon(src="/images/icons/map-pin.svg" alt="Map Pin Icon")
                span COMING SOON

        .split
          .property-card
            .swiper.orchard-manor-swiper
